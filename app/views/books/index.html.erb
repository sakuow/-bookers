<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", "edit_user_path(user.id)", class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |b| %>
        <h4>Title</h4>
        <%= b.text_field:title %>
        <h4>Opinion</h4>
        <%= b.text_area:body %>
        <%= b.submit "Create Book" %>
      <% end %>
    </div>
<!--ここから上　部分テンプレート-->

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |b| %>
          <tr>
           <td>
             <%= link_to user_path(b.user) do %>
             <%= attachment_image_tag b.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
             <% end %>
           </td>
           <td>
             <%= link_to book_path(b.user) do %>
             <%= b.title %>
             <% end %>
            </td>
           <td><%= b.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>