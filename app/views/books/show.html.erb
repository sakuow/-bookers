<div class="container px-5 px-sm-0">
  <div class="row">
<%= render 'users/list', user: @user, book: @book %>
<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
          <%= link_to user_path(@user) do %><br />
          <%= @user.name %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(@user) do %>
          <%= @book.title %>
          <% end %>
        </td>
        <td><%= @book.body %></td>
        <% if @book.user == current_user %>
         <td><%= link_to "Edit", edit_book_path(@book), class:'btn btn-sm btn-success' %></td>
         <td><%= link_to "Destroy", book_path(@book), method: :delete, class:'btn btn-sm btn-danger' %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
</div>
</div>
</div>