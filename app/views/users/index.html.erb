<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to "", "edit_user_path(user.id)", class:'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |b| %>
        <h4>Title</h4>
        <%= b.text_field:title %>
        <h4>Opinion</h4>
        <%= b.text_area:body %>
        <%= b.submit "Create Book" %>
      <% end %>
    </div>
    <!--ここから上　部分テンプレート-->

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |u| %>
          <tr>
            <td><%= attachment_image_tag u, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
            <td><%= u.name %></td>
            <td><%= link_to "show", user_path(u.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>